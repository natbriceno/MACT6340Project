<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nat Briceno - NFT Mint</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body data-bs-spy="scroll" data-bs-target="#navbar" data-bs-offset="50">
    <!-- Include Navbar -->
    <%- include('partials/navbar') %>

    <section id="home" class="text-center">
        <h1 class="text-white">Nat Briceno</h1>
        <p class="lead text-muted">Generative Art NFT Project Collection</p>
        <div class="bg-image" style="background-image: url('/images/organic.png'); height: 50vh; background-size: cover; background-position: center;"></div>
    </section>

    <!-- Featured Section -->
    <section id="featured" class="bg-light text-center">
        <div class="container">
            <h2>Featured</h2>
            <p>Highlighting selected generative art pieces.</p>
        </div>
    </section>

<!-- Projects Section -->
<section id="projects" class="text-center">
    <div class="container">
        <h2>Projects</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% projects.forEach(function(project) { %>
                <div class="col">
                    <div class="card">
                        <img src="<%= project.image_url %>" class="card-img-top" alt="<%= project.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= project.title %></h5>
                            <p class="card-text"><%= project.description %></p>
                            <a href="/projects/<%= project.id %>" class="btn btn-primary">View Project</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>


    <!-- About Section -->
    <section id="about" class="bg-light text-center">
        <div class="container">
            <h2>About</h2>
            <p>A personal NFT mint for an artist. Learn more about my journey in generative art.</p>
            <img src="/images/about.jpg" class="img" alt="About Me">
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="text-center">
        <div class="container">
            <h2>Contact</h2>
            <p>Get in touch with me for collaborations and inquiries.</p>
            <form id="contact-form">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Your Name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Your Email" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Your Message" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Your Message</button>
            </form>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Smooth Scrolling JS -->
    <script src="/js/scroll.js"></script>

    <!-- Contact Form Script -->
    <script>
        document.getElementById("contact-form").addEventListener("submit", function (event) {
            event.preventDefault();
            alert("Your message has been sent!");
        });
    </script>
</body>
</html>






